datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  name        String
  description String
  pdfPath     String
  imagePath   String
  author      String
  category    String
  createdAt   DateTime @default(now())
  price       String?
  ispn        String?
}
